<?xml version='1.0' encoding='utf-8'?>
<widget
   id="com.evothings.accelerometer-demo"
   version="0.0.1"   
   xmlns="http://www.w3.org/ns/widgets"
   xmlns:gap="http://phonegap.com/ns/1.0">

<name>Cordova Accelerometer</name>
<description> Testing the on-board accelerometer </description>
<author email="websmurf@evothings.com" href="http://evothings.com"> Webb S Murph </author>
<content src="index.html" />

<plugin name="cordova-plugin-network-information" spec="~1.3.3" />
<plugin name="cordova-plugin-whitelist" spec="~1.3.2" />   
<allow-navigation href="*" />
<access origin="*" subdomains="true"/>
<allow-intent href="*" subdomains="true" />

<platform name="android">
   <allow-intent href="market:*" subdomains="true" />
</platform>

<platform name="ios">
   <allow-intent href="itms:*" subdomains="true" />
   <allow-intent href="itms-apps:*" subdomains="true" />
</platform>
</widget>
